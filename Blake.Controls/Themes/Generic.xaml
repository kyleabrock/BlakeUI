    <!-- Stock Styles: TextBlock Style -->

    <Style x:Key="DialogTitleTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource BootstrapGrayColor3}" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontSize" Value="21.333" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="DialogTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontSize" Value="13.333" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="RowDetailsTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontSize" Value="11" />
